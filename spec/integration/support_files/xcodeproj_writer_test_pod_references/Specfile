spec('2.0.0') do
  configuration('Debug') do
    type :debug
  end
  configuration('Release') do
    type :release
  end

  target('My app') do
    platform 'ios'
    type ':application'

    source_dir 'sources'
    system_reference 'UIKit.framework'
    include_cocoapods

    configuration do
      override 'INFOPLIST_FILE', 'Info.plist'
      override 'PRODUCT_BUNDLE_IDENTIFIER', 'uk.lyptt.myapp'
    end
  end
end
